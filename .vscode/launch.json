{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app/__init__.py",
                "FLASK_ENV": "development",
                "FLASK_RUN_PORT": "5000"
            },
            "args": [
                "run",
                "--no-debugger",  // This disables the built-in Flask debugger since we're using VSCode's debugger
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}
